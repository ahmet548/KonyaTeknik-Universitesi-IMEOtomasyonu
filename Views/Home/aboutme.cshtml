                            {
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="fw-semibold">Adı Soyadı</div>
                                        <div>@ViewBag.Supervisor.FirstName @ViewBag.Supervisor.LastName</div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="fw-semibold">Telefon</div>
                                        <div>@ViewBag.Supervisor.ContactPhone</div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="fw-semibold">E-posta</div>
                                        <div>@ViewBag.Supervisor.Email</div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="fw-semibold">Uzmanlık Alanı</div>
