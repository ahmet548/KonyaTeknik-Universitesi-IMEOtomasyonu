                            <div class="col-md-6 mb-3">
                                <label for="fullName" class="form-label">Tam Adınız</label>
                                <input type="text" id="fullName" name="fullName" class="form-control"
                                    value="@ViewBag.UserName @ViewBag.UserSurname">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="academicYear" class="form-label">Öğrenim Yılı</label>
                                <input type="text" id="academicYear" name="academicYear" class="form-control"
                                    value="@ViewBag.AcademicYear">
