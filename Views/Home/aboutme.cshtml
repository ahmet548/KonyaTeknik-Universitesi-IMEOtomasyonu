                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">E-posta</div>
                                    <div>@ViewBag.Company?.Email</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">Web Sitesi</div>
                                    <div><a href="@ViewBag.Company?.Website"
