    <!-- Ana İçerik -->
    <div class="main-content" style="padding-top: 20px; margin: 80px 200px">
        <div class="container py-4">

            <!-- Hakkımda Profil Kartı -->
            <div id="user-profile-card" class="row mb-4">
                <div class="col-12">
                    <div class="card profile-card">
                        <div class="card-body d-flex align-items-center">
                            <div class="user-initials-lg me-4">
                                @if (ViewBag.UserName != null && ViewBag.UserSurname != null)
                                {
                                    @($"{ViewBag.UserName[0]}{ViewBag.UserSurname[0]}")
                                }
                                else
                                {
                                    @("M")
                                }
                            </div>
                            <div>
                                <h5 class="card-title mb-0 fs-1">@ViewBag.UserName @ViewBag.UserSurname</h5>
                                <p class="text-muted mb-0">Mühendislik ve Doğa Bilimleri Fakültesi</p>
                                <p class="text-muted small mb-0">@ViewBag.Department</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- İşletme Profil Kartı (Başlangıçta Gizli) -->
            <div id="company-profile-card" class="row mb-4 d-none">
                <div class="col-12">
                    <div class="card profile-card">
                        <div class="card-body d-flex align-items-center">
                            <div class="user-initials-lg me-4">
                                @if (ViewBag.Company != null)
                                {
                                    @ViewBag.Company.CompanyName[0]
                                }
                                else
                                {
                                    @("İ")
                                }
                            </div>
                            <div>
                                <h5 class="card-title mb-0 fs-1">@ViewBag.Company?.CompanyName</h5>
                                <p class="text-muted mb-0">@ViewBag.Supervisor?.FirstName @ViewBag.Supervisor?.LastName
                                </p>
                                <p class="text-muted small mb-0">@ViewBag.Supervisor?.Expertise</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="diary-tabs-container">
                <div class="diary-tabs">
                    <div class="diary-tab active" data-tab="about">Hakkımda</div>
                    <div class="diary-tab" data-tab="company">İşletme Hakkında</div>
                </div>
            </div>

            <div class="mt-4">
                <!-- Hakkımda Sekmesi -->
                <div class="diary-tab-content active" id="about-content">
                    <div class="card info-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">T.C. Kimlik No.</div>
                                    <div>@ViewBag.NationalID</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">Öğrenim Yılı</div>
                                    <div>@ViewBag.AcademicYear. Sınıf</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">Okul Numaranız</div>
                                    <div>@ViewBag.SchoolNumber</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">Telefon No</div>
                                    <div>@ViewBag.PhoneNumber</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">E-posta adresi</div>
                                    <div>@ViewBag.Email</div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="fw-semibold">Adres</div>
                                    <div>@ViewBag.Address</div>
                                </div>
