    <!-- Yan Menü -->
    <div id="sidebar" class="sidebar">
        <div class="sidebar-header">
            <h5 class="sidebar-title">Notlarım</h5>
            <button class="close-sidebar" id="closeSidebar">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="sidebar-content">
            @{
                // This section might need to be adapted for supervisor's view of student notes
                // For now, keeping it as is, assuming it might list notes for the selected student
                var notes = ViewBag.Notes as List<IMEAutomationDBOperations.Models.Note>;
            }
            @if (notes != null && notes.Any())
            {
                <ul class="sidebar-menu" id="notesList">
                    @foreach (var note in notes)
                    {
                        <a class="sidebar-menu-item @(ViewBag.CurrentNote?.NoteID == note.NoteID ? "active" : "")"
                            href="/Supervisor/ShowNote?noteId=@note.NoteID" style="cursor: pointer;"
                            data-note-id="@note.NoteID">
                            <div class="note-item">
                                <div class="note-title">@note.Title</div>
                                @if (ViewBag.CurrentNote?.NoteID == note.NoteID)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-eye" viewBox="0 0 16 16">
                                        <path
                                            d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                                        <path
                                            d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                                    </svg>
                                }
                            </div>
                        </a>
                    }
                </ul>
            }
            else
            {
                <div class="empty-notes">
                    <p>Henüz not bulunmamaktadır</p>
                </div>
            }
        </div>
    </div>

    <!-- Menü Açma Butonu -->
    <button class="menu-toggle" id="menuToggle">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-right"
            viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
        </svg>
    </button>

    <div class="main-content">
        <div class="file-path">
            <a>Not Görüntüleme: <span>@ViewBag.StudentName</span></a>
            <span>/</span>
            <span>
                @if (ViewBag.Note != null)
                {
                    <span>@ViewBag.Note.CreatedAt.ToString("dd MMMM yyyy") tarihli</span>
                    <span class="note-title-path">(@ViewBag.Note.Title)</span>
                }
                else
                {
                    <span>Not bulunamadı.</span>
                }
            </span>
        </div>
        <!-- Header Section -->
        <header class="page-header">
            <div class="header-overlay"></div>
            <div class="header-background">
                <div class="header-content">
                    <div class="header-info">
                        <span class="department-title">@ViewBag.Department</span>
                        <span>@ViewBag.InternshipTitle<span>_Staj Defteri</span></span>
                        <div class="header-details">
                            <div class="detail-item">
                                <div class="user-initials" style="scale: 0.7;">
                                    @if (ViewBag.Supervisor != null &&
                                                                        !string.IsNullOrEmpty(ViewBag.Supervisor.FirstName) &&
                                                                        !string.IsNullOrEmpty(ViewBag.Supervisor.LastName))
                                    {
                                        @($"{ViewBag.Supervisor.FirstName[0]}{ViewBag.Supervisor.LastName[0]}")
                                    }
                                    else
                                    {
                                        @("S")
                                    }
                                </div>
                                <span>@(ViewBag.Supervisor?.FirstName ?? "Supervisor") @(ViewBag.Supervisor?.LastName ??
                                                                        "")</span>
                            </div>
                            <div class="detail-item">
                                <div class="user-initials" style="scale: 0.7;">
                                    @if (ViewBag.Company != null && !string.IsNullOrEmpty(ViewBag.Company.CompanyName))
                                    {
                                        var companyName = ViewBag.Company.CompanyName.Trim();
                                        var words = companyName.Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);

                                        if (words.Length >= 2)
                                        {
                                            @($"{words[0][0]}{words[1][0]}")
                                        }
                                        else
                                        {
                                            @companyName[0]
                                        }
                                    }
                                    else
                                    {
                                        @("İ")
                                    }
                                </div>
                                <span>@(ViewBag.Company?.CompanyName ?? "İşletme Bilgisi Yok")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="add-note-container">
            <div class="note-display-section">
                @if (ViewBag.Note != null)
                {
                    <h2 class="note-display-title">@ViewBag.Note.Title</h2>
                    @if (!string.IsNullOrEmpty(ViewBag.Note.SubTitle))
                    {
                        <h4 class="note-display-subtitle">@ViewBag.Note.SubTitle</h4>
                    }
                    <div class="note-display-content">
                        @Html.Raw(ViewBag.Note.Content)
                    </div>
                }
                else
                {
                    <p>Görüntülenecek not bulunamadı.</p>
                }
            </div>
        </div>

        <footer class="footer-popover">
            <img src="~/img/footerLogo.png" alt="KTUN Logo" height="80">
            <a class="no-click" href="https://www.ktun.edu.tr/tr/Birim/Iletisim/?brm=ykJ8AXlJAZwqxw4bNyp+VQ=="
                target="_blank" rel="noopener">İletişim</a>
        </footer>
    </div>

    <script src="~/scripts/calendar.js"></script>
    <script src="~/scripts/main.js"></script>
    <script src="~/scripts/diary.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>