    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Scroll to top button
            const scrollToTopBtn = document.getElementById("scrollToTop");
            window.onscroll = function () {
                if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                    scrollToTopBtn.style.display = "block";
                } else {
                    scrollToTopBtn.style.display = "none";
                }
            };
            scrollToTopBtn.addEventListener("click", function () {
                document.body.scrollTop = 0;
                document.documentElement.scrollTop = 0;
            });

            // Tab switching
            $('#control-panel-link').click(function (e) {
                e.preventDefault();
                $('#student-list-section').hide();
                $('#control-panel-section').show();
                $('.main-nav-link').removeClass('active');
                $(this).addClass('active');
            });

            $('#student-list-link').click(function (e) {
                e.preventDefault();
                $('#control-panel-section').hide();
                $('#student-list-section').show();
                $('.main-nav-link').removeClass('active');
                $(this).addClass('active');
            });

            // Search functionality
            $('#student-search-button').click(function () {
                var searchTerm = $('#student-search-input').val();
                if (searchTerm) {
                    $.ajax({
                        url: '/Supervisor/SearchStudent',
                        type: 'GET',
                        data: { searchTerm: searchTerm },
                        success: function (result) {
                            $('#student-details-container').html(result);
                        }
                    });
                }
            });

            $('#student-search-input').keypress(function (event) {
                var keycode = (event.keyCode ? event.keyCode : event.which);
                if (keycode == '13') {
                    $('#student-search-button').click();
                }
            });
        });
    </script>
