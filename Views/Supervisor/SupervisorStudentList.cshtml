@using IMEAutomationDBOperations.Models
@model List<Student>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>

<body>
    <h2 class="mb-4 text-center text-primary">Öğrenci Listesi</h2>

    <div class="d-flex justify-content-center">
        <div class="table-responsive shadow-sm rounded w-50 d-flex justify-content-center">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Ad Soyad</th>
                        <th scope="col">Okul Numarası</th>
                        <th scope="col" style="width:150px;">Notlandır</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FirstName @student.LastName</td>
                            <td>@student.SchoolNumber</td>
                            <td>
                                <a href="/Supervisor/EvaluateStudent?studentId=@student.UserID"
                                    class="btn btn-sm btn-primary w-100">
                                    <i class="bi bi-pencil-square me-1"></i> Notlandır
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
