@model IMEAutomationDBOperations.Models.Student

@{
    ViewData["Title"] = "Staj Bilgilerini Tamamla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Staj Bilgilerini Tamamla</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Hata</div>
                    }
                    <form asp-action="CompleteInternshipInfo" method="post">
                        <input type="hidden" name="studentId" value="@ViewData["StudentId"]" />
                        <div class="form-group">
                            <label for="companyName">Staj Yapılan Kurum Adı</label>
                            <input type="text" class="form-control" id="companyName" name="companyName" required>
                        </div>
                        <div class="form-group">
                            <label for="supervisorId">Staj Sorumlusu</label>
                            <select class="form-control" id="supervisorId" name="supervisorId" required>
                                <option value="">Seçiniz</option>
                                @foreach (var supervisor in ViewBag.Supervisors)
                                {
                                    <option value="@supervisor.SupervisorID">@supervisor.FirstName @supervisor.LastName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="startDate">Başlangıç Tarihi</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="form-group">
                            <label for="endDate">Bitiş Tarihi</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                        <div class="form-group">
                            <label>Çalışma Günleri</label>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="monday" name="workDays" value="Pazartesi">
                                <label class="form-check-label" for="monday">Pazartesi</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="tuesday" name="workDays" value="Salı">
                                <label class="form-check-label" for="tuesday">Salı</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="wednesday" name="workDays" value="Çarşamba">
                                <label class="form-check-label" for="wednesday">Çarşamba</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="thursday" name="workDays" value="Perşembe">
                                <label class="form-check-label" for="thursday">Perşembe</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="friday" name="workDays" value="Cuma">
                                <label class="form-check-label" for="friday">Cuma</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="internshipTitle">Staj Başlığı</label>
                            <input type="text" class="form-control" id="internshipTitle" name="internshipTitle" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Bilgileri Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
